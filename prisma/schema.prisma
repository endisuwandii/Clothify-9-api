

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
    id String @id @default(ulid())

    name        String
    imageUrl       String
    price       Int
    stock       Int
    description String 

    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

