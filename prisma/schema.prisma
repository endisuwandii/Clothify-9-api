generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(ulid())

  slug     String @unique
  name     String
  imageUrl String

  price       Int
  stock       Int
  description String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
